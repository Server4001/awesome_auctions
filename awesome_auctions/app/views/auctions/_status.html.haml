%span Current Bid:
%span#current-bid-price #{number_to_currency(@top_bid)}

-if @auction.i_bid_on_this? current_user
  -if @auction.ended? and @auction.top_bid_is_mine? current_user
    %span#bid-status.label.label-success You Won
  -elsif @auction.ended?
    %span#bid-status.label.label-danger You Lost
  -elsif @auction.top_bid_is_mine? current_user
    %span#bid-status.label.label-success Your Bid
  -else
    %span#bid-status.label.label-danger Not Your Bid
